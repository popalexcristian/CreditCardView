<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">

        <item name="android:background">@android:color/white</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/jungle_green</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="colorControlNormal">@color/winery_orange</item>

        <item name="fontPath">fonts/Roboto-Medium.ttf</item>

        <!-- icons -->
        <item name="android:textColorSecondary">@android:color/black</item>

        <item name="colorControlHighlight">@color/winery_orange</item>

    </style>

    <declare-styleable name="creditcard">
        <attr name="cvv" format="integer" />
        <attr name="card_holder_name" format="string" />
        <attr name="card_expiration" format="string" />
        <attr name="card_number" format="string" />
        <attr name="card_side" format="enum">
            <enum name="front" value="1" />
            <enum name="back" value="0" />
        </attr>

    </declare-styleable>
</resources>
