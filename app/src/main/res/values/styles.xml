<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">

        <item name="android:background">@android:color/white</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/jungle_green</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="colorControlNormal">@color/winery_orange</item>

        <!-- icons -->
        <item name="android:textColorSecondary">@android:color/black</item>

        <item name="colorControlHighlight">@color/winery_orange</item>

    </style>

    <style name="AppTheme.NoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/winery_orange</item>
        <item name="android:dialogTheme">@style/Theme.AppCompat.Light.Dialog</item>

        <!-- Title Text Color -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlHighlight">@color/winery_orange</item>

        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/ToolbarTitleTextAppearance</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

</resources>
